{
  "settings": {
    "index.refresh_interval": "5s",
    "number_of_replicas": 0,
    "index": {
      "similarity": {
        "disabledTF": {
          "type": "BM25",
          "b": "1.0",
          "k1": "0.0"
        }
      }
    },
    "analysis": {
      "analyzer": {
        "customAnalyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "stemmer"
          ],
          "char_filter": [
            "removeDash"
          ]
        }
      },
      "char_filter": {
        "removeDash": {
          "type": "mapping",
          "mappings": [
            "- => "
          ]
        }
      },
      "filter": {
        "stemmer": {
          "type": "stemmer",
          "language": "light_english"
        }
      }
    }
  },
  "mappings": {
    "dynamic": "false",
    "properties": {
      "active": {
        "type": "boolean"
      },
      "name": {
        "type": "text",
        "analyzer": "customAnalyzer",
        "similarity": "disabledTF",
        "copy_to": "catchAll"
      },
      "nameSentinel": {
        "type": "text",
        "analyzer": "customAnalyzer"
      },
      "shortDescription": {
        "type": "text",
        "analyzer": "customAnalyzer",
        "copy_to": "catchAll"
      },
      "longDescription": {
        "type": "text",
        "analyzer": "customAnalyzer",
        "copy_to": "catchAll"
      },
      "department": {
        "type": "text",
        "analyzer": "customAnalyzer",
        "similarity": "disabledTF",
        "copy_to": "catchAll",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "regularPrice": {
        "type": "float"
      },
      "catchAll": {
        "type": "text",
        "analyzer": "customAnalyzer"
      },
      "productId": {
        "type": "keyword"
      }
    }
  }
}